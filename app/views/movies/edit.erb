<h1>Edit Movie</h1>

<form action="/update_movie/<%= @movie.id %>" method="post">
  <p>
    <label for="movie_title">Title</label>
    <input type="text" name="movie_title" value="<%= @movie.title %>">
  </p>

  <p>
    <label for="movie_director">Director</label>
    <select name="movie_director">
      <option>Select a director...</option>

      <% @directors.each do |director| %>
        <option value="<%= director.id %>"
          <%= "selected" if @movie.director_id == director.id %>>

          <%= director.name %>
        </option>        
      <% end %>
    </select>
  </p>

  Actors:<br>

  <% @actors.each do |actor| %>
    <p>
      <input type="checkbox" 
        name="movie_actors[]" 
        value="<%= actor.id %>"
        <%= "checked" if @movie.actors.include?(actor) %>>
      <%= actor.name %>
    </p>
  <% end %>

  <input type="submit">
</form>

