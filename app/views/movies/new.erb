<h1>New Movie</h1>

<form action="/create_movie" method="post">
  <p>
    <label for="movie_title">Title</label>
    <input type="text" name="movie_title">
  </p>

  <p>
    <label for="movie_director">Director</label>
    <select name="movie_director">
      <option value="">Select a director...</option>

      <% @directors.each do |director| %>
        <option value="<%= director.id %>">
          <%= director.name %>
        </option>        
      <% end %>
    </select>
  </p>

  Actors:<br>

  <% @actors.each do |actor| %>
    <p>
      <input type="checkbox" name="movie_actors[]" value="<%= actor.id %>">
      <%= actor.name %>
    </p>
  <% end %>

  <input type="submit">
</form>










